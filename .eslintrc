{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "max-len": ["error", { "code": 200 }],
        "object-curly-spacing": ["error", "always"],
        "no-console": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ],
        "class-methods-use-this": "off" ,
        "no-underscore-dangle": "off",
        "import/prefer-default-export": "off"
    }
}